{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "GCC 生成活动文件",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "GCC编译器"
        }
    ],
    "version": "2.0.0"
}
